<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Jc.PopupView.Avalonia.Sample.Views.Toasts.Toast2">
    <Grid RowDefinitions="Auto Auto" ColumnDefinitions="* Auto" Margin="20" Background="#f5f5f5" RowSpacing="5">
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" VerticalAlignment="Center">
            <TextBlock Classes="h2">Login Required</TextBlock>
            <TextBlock Classes="p">To continue, you must log in...</TextBlock>
        </StackPanel>
        <Button Grid.Row="0" Grid.Column="1" Click="Button_OnClick" HorizontalAlignment="Center" Background="#336B87" Foreground="#f5f5f5" Padding="10">Log in</Button>
        <Button Grid.Row="1" Grid.Column="1" Click="Button_OnClick" HorizontalAlignment="Center" Background="#f5f5f5" Padding="10">Sign up</Button>
    </Grid>
</UserControl>
